    <artifactId>humanresource-microservice-region</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>humanresource-microservice-region</name>
    <description>Human Resource Microservices [REGION]</description>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>
